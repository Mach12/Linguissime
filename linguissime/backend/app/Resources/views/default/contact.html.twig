{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        <div class="row center-block">
            <div class="col-md-6 col-sm-12 col-lg-4 col-md-offset-4">
                <div class="card card-shadow">
                    <div class="card-block">
                        <h1 class="card-title text-xs-center h4 m-b-2">Contact</h1>
                        {{ form_start(form) }}

                            <fieldset class="form-group">
                                 {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </fieldset>

                            <fieldset class="form-group">
                                 {{ form_row(form.subject, {'attr': {'class': 'form-control'}}) }}
                            </fieldset>

                            <fieldset class="form-group">
                                {{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                            </fieldset>

                            <fieldset class="form-group m-b-0" style="display:block">
                                <button type="submit" class="btn btn-block btn-primary">Envoyer</button>
                            </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}