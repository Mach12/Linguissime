{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-lg-offset-1">
                <ul class="list-group">
                	<li class="list-group-item"><a href="{{ path('change_account') }}">Information personelles</a></li>
                    <li class="list-group-item active">Mot de passe</li>
                    <li class="list-group-item"><a href="{{ path('stats') }}">Statistiques</a></li>
                    <li class="list-group-item"><a href="{{ path('badge') }}">Badges</a></li>
                </ul>
            </div>

            <div class="col-lg-6">

                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ flash_message }}
                    </div>
                {% endfor %}

                <div class="card">
                    <div class="card-header">
                        Mot de passe
                    </div>
                    <div class="card-block">
                        {{ form_start(form) }}
                            <fieldset class="form-group">
                            	{{ form_row(form.oldPassword, {'attr': {'class': 'form-control','placeholder': 'Mot de passe actuel'}}) }}
                            </fieldset>

                            <fieldset class="form-group">
                            	{{ form_row(form.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            </fieldset>

                            <fieldset class="form-group">
                            	{{ form_row(form.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                            </fieldset>

                            <fieldset class="form-group m-b-0">
                                <button type="submit" class="btn btn-sm pull-xs-right btn-primary">Enregistrer les modifications</button>
                            </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<footer class="footer">
    <div class="container">
        <ul class="list-inline">
            <li class="list-inline-item"><a href="">Centre d'aide</a></li>
            <li class="list-inline-item"><a href="">A propos</a></li>
            <li class="list-inline-item"><a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <li class="list-inline-item"><a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <li class="list-inline-item"><a href=""><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
        </ul>
    </div>
</footer>


{% endblock %}